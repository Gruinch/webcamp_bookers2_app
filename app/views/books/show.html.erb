<div class="container">
<div class="row">

<%=render 'user_info'%>

<div class="col-lg-8">
  <h2>Book Detail</h2>
<table class="table">
    <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%> </td>
      <td><%=link_to @user.name, user_path(@user.id) %></td>
      <td><%=link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>
</div>
