<div class="container">
  <div class="row">
  <%=render 'user_info'%>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br/>
            <%= @user.name%>
          <% end %>
        </td>
        <td><%=link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user.id==current_user.id %>
        <td><a class="btn btn-success" href="/books/<%= @book.id %>/edit">Edit</a></td>
        <td><a class="btn btn-danger" href="/books/<%= @book.id %>", data-method="delete">Destroy</a></td>
        <% end %>
      </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>