<!doctype html>
<body>
<div class="container">
<div class="row">

<div class="col-lg-4">
  <h1>User Info</h1>
  <%= @user.name %>
  <%= link_to 'Edit Profile', edit_user_path(current_user.id) %>
  <h1>New Post</h1>
      <%= form_with model:@book, local:true do |f| %>
      <div class="row">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
      </div>
      <div class="row">
      <%= f.label :body, 'Body' %>
      <%= f.text_field :body %>
      </div>
      <div class="row">
      <%= f.submit 'Create Book'%>
      </div>
      <% end %>
</div>

<div class="col-lg-8">
  <h1>Book Detail</h1>
<table class="table">
    <tbody>
    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>
</div>
</body>