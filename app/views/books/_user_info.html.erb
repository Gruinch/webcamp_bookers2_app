  <h1>User Info</h1>
    <table class="table">
      <thead>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
      </thead>
      <tbody>
        <tr></tr>
        <tr>
         <th scope="row">name</th>
        <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row">introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <div class="row-auto">
    <%= link_to edit_user_path(@user) do %>
      <button type="button" class="btn btn-outline-secondary btn-block">
      <i class="fas fa-user-cog"></i></button>
    <% end %>
    </div>

    <h1>New book</h1>
      <%= form_with model:@book_new, local:true do |f| %>
      <div class="p-3 row-auto">
        <div><%= f.label :Title %></br>
        <%= f.text_field :title, class:"form-control" %></div>
      </div>
      <div class="p-3 row-auto">
         <div><%= f.label :Opinion %></br>
             <%= f.text_area :body, class:"form-control" %></div>
      </div>
      <div class="p-3 row-auto">
        <%= f.submit  'Create Book',class:"btn btn-success" %>
      </div>
      <% end %>
</div>
