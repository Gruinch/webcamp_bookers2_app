<div class="d-block p-10 col-lg-4">
  <% if flash[:notice] %>
  ã€€<p class="notice"><%= notice %></p>
  <% end %>
  <% if @book_new.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
    <ul>errors!
  <% @book_new.errors.full_messages.each do |message| %>

      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>
  <h1>User Info</h1>
  <table class="table">
  <thead>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  </thead>
  <tbody>
    <tr>
     <th scope="row">name</th>
    <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
  </table>
  <button type="button" class="btn btn-secondary "><%= link_to 'Edit Profile', edit_user_path(current_user.id) %></button>

  <h1>New book</h1>
      <%= form_with model:@book_new, local:true do |f| %>
      <div class="p-3 row">
      <div><%= f.label :Title %></br>
      <%= f.text_field :title, class:"form-control" %></div>
      </div>
      <div class="p-3 row">
       <div><%= f.label :Opinion %></br>
           <%= f.text_area :body, class:"form-control" %></div>
      </div>
      <div class="p-3 row">
      <%= f.submit  'Create Book',class:"btn btn-success" %>
      </div>
      <% end %>
</div>
