
<div class="container">
<div class="row">
<div class="col-lg-4">
  <h1>user info</h1>
  <h1>New Post</h1>
      <%= form_with model:@book, local:true do |f| %>
      <div class="row">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
      </div>
      <div class="row">
      <%= f.label :body, 'Body' %>
      <%= f.text_field :body %>
      </div>
      <div class="row">
      <%= f.submit 'Create Book'%>
      </div>

      <% end %>

</div>
<div class="col-lg-8">
  <h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>