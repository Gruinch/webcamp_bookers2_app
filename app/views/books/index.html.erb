<div class="container">
  <div class="row">
  <%=render 'user_info'%>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
      </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%=link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><% end %></td>
          <td><%=link_to book.title, book_path(book)%></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>