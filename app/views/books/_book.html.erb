  <h1>Books</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 15, 15, fallback: "no_image.jpg"%></td>
      <td><%=link_to book.title, book_path(book)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
