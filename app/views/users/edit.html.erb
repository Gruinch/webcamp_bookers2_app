<div class="container">
<h2>User Edit</h2>

<%= form_with model:@user, local:true do |f| %>
  <div class="row">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>

  <div class="row">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>

  <div class="row">
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"イントロダクション"%>
  </div>


  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
</div>