<!doctype html %>
<html>
rai<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
</div>
    <div class="col-lg-4">
     <h1>New Post</h1>
     <%= form_with model:@book, local:true do |f| %>
     <form>
       <div class="form-group">
       <label for="title">Title</label></br>
       <input type="title" id="book_title" class="title">
       </div>

        <div class="form-group">
        <label for="opinion">Opinion</label>
        <textarea class="form-control" id="book_body" rows="3"></textarea>
        </div>
     </form>
      <%= f.submit 'Create Book'%>
      <% end %>
     </div>
  </div>
</html>
