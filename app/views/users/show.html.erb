<div class="container">
<div class="row">
  <div class="col-lg-4">
  <h1>User Info</h1>
 <div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag('no_image.jpg') %>
  <%= @user.name %>

  <%= link_to 'Edit Profile', edit_user_path(current_user.id) %>

  <h1>New Post</h1>
      <%= form_with model:@book, local:true do |f| %>
        <div class="row">
        <%= f.label :title %>
        <%= f.text_field :title %>
        </div>
        <div class="row">
        <%= f.label :body %>
        <%= f.text_field :body %>
        </div>
        <div class="row">
        <%= f.submit 'Create Book'%>
        </div>
      <% end %>
 </div>
 </div>


<div class="col-lg-8">
  <h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%=link_to book.title, book_path(book)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
